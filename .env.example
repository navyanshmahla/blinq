# AI Model API Keys (according to litellm)
# Examples: XAI_API_KEY, OPENAI_API_KEY, ANTHROPIC_API_KEY

# Environment
ENVIRONMENT=dev  # 'dev' or 'prod'

# Database
DATABASE_URL=sqlite:///./blinq.db  # or postgresql://user:password@localhost/blinq

# JWT Authentication
JWT_SECRET_KEY=your-secret-key-change-in-production

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Production Security
# Comma-separated list of trusted hosts (production only)
TRUSTED_HOSTS=yourdomain.com,www.yourdomain.com

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_TO_FILE=true
APP_LOG_FILE=logs/app.log
AGENT_LOG_FILE=logs/agent.log
